#include <stdio.h>
#include <stdlib.h>

int main() {
    int n;
    scanf("%d", &n);

    if (n <= 0) {
        printf("Shape Not Possible");
        return 0;
    }

    int totalRows = 2 * n - 1;
    int mid = n - 1;

    for (int i = 0; i < totalRows; i++) {
        int dist = abs(mid - i);

        for (int j = 0; j < totalRows; j++) {

            if (i == mid)
                printf("*");

         
            else if (j == mid - dist || j == mid + dist)
                printf("*");

            else
                printf(" ");
        }
        printf("\n");
    }

    return 0;
}
